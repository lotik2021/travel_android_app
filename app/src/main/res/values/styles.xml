<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@drawable/bg_launcher</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">#bdbdbd</item>
        <item name="android:windowBackground">@color/bg_main</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_dialog</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseMaterialElevatedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseMaterialUnelevatedButton" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseMaterialTextButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BaseMaterialOutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarWhite" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="navigationIcon">@drawable/vector_drawable_back</item>
        <item name="titleTextColor">@color/blue</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ApplyButton" parent="BaseMaterialElevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cornerRadius">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/state_accept_button</item>
    </style>

    <style name="RefreshButton" parent="BaseMaterialTextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/refresh</item>
        <item name="icon">@drawable/vector_drawable_refresh</item>
        <item name="iconPadding">8dp</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="AgencyInfoButton" parent="BaseMaterialTextButton">
        <item name="android:layout_height">56dp</item>
        <item name="iconPadding">24dp</item>
        <item name="android:paddingLeft">24dp</item> <!-- paddingLeft/right not working wtf -->
        <item name="android:paddingRight">24dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">@color/blue</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextInputHelperText">
        <item name="android:textColor">#BDC5CE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextTripDetailHeader">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextTripDetailLocation">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTripDetailTime">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTripDetailStops">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextTripDetailDestination">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DefaultProfileTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow</item>
        <item name="android:drawablePadding">11dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextDialogHint">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DefaultCheckBoxStyle">
        <item name="colorControlNormal">@color/color_accent</item>
        <item name="colorControlActivated">@color/color_accent</item>
    </style>

    <style name="TravelCardInput">
        <item name="android:backgroundTint">#BDC5CE</item>
        <item name="android:inputType">number</item>
        <item name="android:textColorHint">#BDC5CE</item>
    </style>

    <style name="PlacesTabText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAuthHint">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- для materialcomponents 1.0.0 нельзя указать цвет неактивной обводки -->
        <item name="android:textColorHint">@color/text_grey</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="DefaultEditTextStyle">
        <item name="colorControlNormal">#BDC5CE</item>
        <item name="colorControlActivated">?colorAccent</item>
        <item name="colorControlHighlight">#BDC5CE</item>
        <item name="android:textColorHint">#BDC5CE</item>
    </style>

    <style name="RouteDetailItemTargetButton">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginEnd">23dp</item>
        <item name="android:src">@drawable/icon_target</item>
    </style>

    <!-- Tickets -->
    <style name="ApplyButton.Blue">
        <item name="android:layout_height">66dp</item>
        <item name="android:backgroundTint">@color/blue_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SearchTicketsParamsButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:elevation">30dp</item>
    </style>

    <style name="SearchTicketsCardView" parent="CardView">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="TextSearchTicketsLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/text_blue_medium</item>
    </style>

    <style name="TextSearchTicketsPrimaryPlace">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSearchTicketsPrimaryPlace.Inactive">
        <item name="android:textColor">@color/text_blue_light</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextSearchTicketsPrimaryParams" parent="TextSearchTicketsPrimaryPlace">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFeatureSettings">"smcp"</item>
    </style>

    <style name="TextSearchTicketsAlias">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextDateSelectDayLabel">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFeatureSettings">"smcp"</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ToolbarBlueCenteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontFeatureSettings">"smcp"</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="SelectPlaceTitle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontFeatureSettings">"smcp"</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextBlueBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>

    <style name="TextBlueBold.Smaller">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_primary</item>
    </style>

    <style name="SwithBlue" parent="Theme.MaterialComponents.Light">
        <item name="colorControlActivated">@color/blue_primary</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/blue_primary</item>
    </style>

    <style name="LightRippleButton" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="SelectComfortTypeDialogButton" parent="BaseMaterialTextButton">
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="rippleColor">@color/comfort_type_selected</item>
    </style>

    <style name="FilterClearBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="FilterCategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#EEEFF4</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="FilterTitle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/text_blue_80</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FilterDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_search</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="FiltersSeekBar">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">9dp</item>
        <item name="android:layout_marginEnd">9dp</item>
        <item name="mrb_barWeight">4dp</item>
        <item name="mrb_connectingLineColor">@color/blue_primary</item>
        <item name="mrb_connectingLineWeight">4dp</item>
        <item name="mrb_leftSelectorColor">@color/blue_primary</item>
        <item name="mrb_pinMaxFont">15sp</item>
        <item name="mrb_pinMinFont">15sp</item>
        <item name="mrb_pinTextColor">@color/blue_primary</item>
        <item name="mrb_rangeBarColor">@color/calendar_inactive_date</item>
        <item name="mrb_rangeBarPaddingBottom">30dp</item>
        <item name="mrb_rangeBar_rounded">true</item>
        <item name="mrb_rightSelectorColor">@color/blue_primary</item>
        <item name="mrb_selectorBoundarySize">0dp</item>
        <item name="mrb_selectorSize">10dp</item>
        <item name="mrb_temporaryPins">false</item>
        <item name="mrb_tickHeight">0dp</item>
        <item name="mrb_tickInterval">1</item>
        <item name="mrb_tickLabelSize">4sp</item>
    </style>

    <style name="FiltersLabelStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_blue_80</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FiltersMarkStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_filter_label</item>
        <item name="android:backgroundTint">@color/blue_light</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/turbid_blue</item>
    </style>

    <style name="FiltersCheckBox">
        <item name="android:clickable">false</item>
        <item name="colorControlNormal">@color/blue_primary_transparent</item>
        <item name="colorControlActivated">@color/blue_primary</item>
    </style>

    <style name="BasketPriceStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PrimaryCheckBoxStyle">
        <item name="colorAccent">#1B2C57</item>
    </style>

    <style name="DetailRouteSecondaryTextStyle">
        <item name="android:alpha">0.7</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DetailRoutePrimaryTextStyle">
        <item name="android:alpha">0.7</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style name="DetailRouteBoldTextStyle">
        <item name="android:alpha">0.5</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

</resources>
