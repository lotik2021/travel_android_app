<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/increase_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/LightRippleButton"
        android:layout_marginStart="14dp"
        android:padding="8dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/add_active"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/count_text"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/decrease_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/LightRippleButton"
        android:padding="8dp"
        android:foreground="?selectableItemBackgroundBorderless"
        android:src="@drawable/remove_inactive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextBlueBold"
        android:layout_marginStart="14dp"
        android:gravity="center"
        tools:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/decrease_count"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>