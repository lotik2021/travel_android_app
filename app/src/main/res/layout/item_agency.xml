<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/agency_title"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textColor="@color/blue"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ГУП «Петербургский метрополитен»" />

    <com.google.android.material.button.MaterialButton
        style="@style/AgencyInfoButton"
        android:id="@+id/agency_url"
        android:layout_width="0dp"
        app:icon="@drawable/agency_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agency_title"
        tools:text="http://www.metro.spb.ru/" />

    <com.google.android.material.button.MaterialButton
        style="@style/AgencyInfoButton"
        android:id="@+id/agency_phone_number"
        android:layout_width="0dp"
        app:icon="@drawable/agency_phone_number"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agency_url"
        tools:text="http://www.metro.spb.ru/" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="72dp"
        android:background="#E8EAED"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agency_phone_number" />
</androidx.constraintlayout.widget.ConstraintLayout>